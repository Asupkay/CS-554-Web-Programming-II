<article class="container">
    <div class="page-header">
        <h1>Alex's Portfolio of Wonders</h1>
    </div>
    <div class="row">
        <div class="col-sm-2 sidenav">
            {{#each products}}
            <a href="#{{this.id}}">{{this.name}}</a><br> 
            {{/each}}
        </div>
        <div class="col-sm-10">
            <div class="row">
                {{#each products}}
                <div class="col-12 col-md-6 col-lg-4" id="{{this.id}}">
                    <div class="card">
                        <img class="card-img-top" src="{{this.img}}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{this.id}}">More Detail</button>

                            <div class="modal" id="modal-{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    <p>{{this.details}}</p>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</article> 
